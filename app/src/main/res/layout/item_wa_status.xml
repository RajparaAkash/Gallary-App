<?xml version="1.0" encoding="utf-8"?>
<com.gallaryapp.privacyvault.photoeditor.MyViewCustom.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/status_mainImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sub_bg_color"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <ImageView
        android:id="@+id/status_playImg"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_video_play"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/status_downalodImg"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_4sdp"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/icon_wa_status_downalod" />

</com.gallaryapp.privacyvault.photoeditor.MyViewCustom.SquareRelativeLayout>
