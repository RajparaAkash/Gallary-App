<?xml version="1.0" encoding="utf-8"?>
<com.gallaryapp.privacyvault.photoeditor.MyViewCustom.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sub_bg_color"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <ImageView
        android:id="@+id/videoIcon"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_video_play"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/selectIcon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/checkbox_round_unselected"
        android:visibility="gone" />

</com.gallaryapp.privacyvault.photoeditor.MyViewCustom.SquareRelativeLayout>
