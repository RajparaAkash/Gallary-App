<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActVideoView">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:buffered_color="@color/colorPrimary"
        app:controller_layout_id="@layout/custom_playback_view"
        app:hide_on_touch="false"
        app:player_layout_id="@layout/exo_layout_view"
        app:resize_mode="fit"
        app:show_buffering="when_playing"
        app:show_timeout="4000"
        app:shutter_background_color="#000000"
        app:surface_type="surface_view"
        app:use_controller="true" />

    <View
        android:id="@+id/nightModeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightDarkColor"
        android:visibility="gone" />

</RelativeLayout>
