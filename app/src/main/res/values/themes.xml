<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gallery" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/bg_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/bg_color</item>
    </style>

    <style name="Theme.Gallery" parent="Base.Theme.Gallery" />

    <style name="optionRecyclerView" parent="">
        <item name="android:visibility">gone</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/bg_color</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottomsheet</item>
    </style>

    <style name="PinButtonStyle" parent="">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_password_pin</item>
        <item name="android:foreground">@drawable/bg_ripple_round</item>
        <item name="android:layout_width">@dimen/_55sdp</item>
        <item name="android:layout_height">@dimen/_55sdp</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
        <item name="android:layout_marginStart">@dimen/_13sdp</item>
        <item name="android:layout_marginEnd">@dimen/_13sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sf_medium</item>
    </style>

    <style name="PatternViewStyle" parent="">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_13sdp</item>
        <item name="android:layout_marginBottom">@dimen/_13sdp</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="lock9_autoLink">false</item>
        <item name="lock9_enableVibrate">true</item>
        <item name="lock9_lineColor">@color/colorPrimary</item>
        <item name="lock9_lineWidth">@dimen/_5sdp</item>
        <item name="lock9_nodeOnAnim">@anim/anim_node_on</item>
        <item name="lock9_nodeOnSrc">@drawable/icon_pattern_dot_selected</item>
        <item name="lock9_nodeSize">@dimen/_45sdp</item>
        <item name="lock9_nodeSrc">@drawable/icon_pattern_dot_default</item>
        <item name="lock9_padding">50dp</item>
        <item name="lock9_spacing">50dp</item>
        <item name="lock9_vibrateTime">80</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">5%</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/bg_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/bg_color</item>
    </style>

</resources>